@model CartModel
@{
    ViewData["Title"] = "Cart Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1 class="h3">Alışveriş Sepeti</h1>
<hr>

@if (Model.CartItems.Count == 0)
{
    <div class="row">
        <div class="col-12">
            <div class="alert alert-warning">
                Sepetinizde ürün yok
            </div>
        </div>
    </div>
}
else
{
    <div class="row">
        <div class="col-md-8">
            <div class="text-left">
                <h4>Sepetteki Ürünler</h4>
            </div>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th></th>
                        <th>Ürün Adı</th>
                        <th>Fiyat</th>
                        <th>Miktar</th>
                        <th>Toplam</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.CartItems)
                    {
                        <tr>
                            <td>
                                <img src="~/img/@item.ImageUrl" width="80" alt="" />
                            </td>
                            <td>@item.Name</td>
                            <td>@item.Price ₺</td>
                            <td>@item.Quantity</td>
                            <td>@(item.Quantity * item.Price) ₺</td>
                            <td>
                                <form asp-controller="Cart" asp-action="DeleteFromCart" method="post">
                                    <input type="hidden" name="productId" value="@item.ProductId" />
                                   
                                    <button class="btn btn-danger btn-sm"><i class="fa fa-times fa-fw"></i></button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="col-md-4">
            <div class="text-left">
                <h4>Alışveriş Özeti</h4>
            </div>
            <table class="table">
                <tbody>
                    <tr>
                        <th>Sepet Toplamı</th>
                        <td>@Model.TotalPrice().ToString("c")</td>
                    </tr>
                    <tr>
                        <th>Kargo</th>
                        <th>Ücretsiz</th>
                    </tr>
                    <tr>
                        <th>Sipariş Toplamı</th>
                        <th>@Model.TotalPrice().ToString("c")</th>
                    </tr>
                </tbody>
            </table>
            <div class="text-center">
                <a href="/" class="btn btn-primary">
                    <i class="fa fa-arrow-circle-left fa-fw"></i>Alışverişe Devam
                </a>               
                <a asp-controller="Cart" asp-action="Bill" class="btn btn-primary">
                    <i class="fa fa-arrow-circle-right fa-fw"></i>Tamamla
                </a>
            </div>
        </div>
    </div>
}

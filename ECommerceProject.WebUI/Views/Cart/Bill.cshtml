@model CartModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.CartItems.Count == 0)
{
    <div class="row">
        <div class="col-12">
            <div class="alert alert-warning">
                Sepetinizde ürün yok
            </div>
        </div>
    </div>
}
else
{
    <!DOCTYPE html>
    <html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>Fatura</title>
        <!-- Tell the browser to be responsive to screen width -->
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <!-- Font Awesome -->
        <link rel="stylesheet" href="~/custom2css/plugins/fontawesome-free/css/all.min.css">
        <!-- Ionicons -->
        <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
        <!-- Theme style -->
        <link rel="stylesheet" href="~/custom2css/dist/css/adminlte.min.css">
        <!-- Google Font: Source Sans Pro -->
        <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
    </head>
    <body class="hold-transition sidebar-mini">

        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Fatura</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>

        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        <div class="callout callout-info">
                            <h5><i class="fas fa-info"></i> Uyarı:</h5>
                            Faturanızı yazdırmanız ya da indiriniz.
                        </div>


                        <!-- Main content -->
                        <div class="invoice p-3 mb-3">
                            <!-- title row -->
                            <div class="row">
                                <div class="col-12">
                                    <h4>
                                        <i class="fas fa-globe"></i> AdminLTE, Inc.
                                        <small class="float-right">Tarih: 2/10/2014</small>
                                    </h4>
                                </div>
                                <!-- /.col -->
                            </div>
                            <!-- info row -->
                            <div class="row invoice-info">
                                <div class="col-sm-4 invoice-col">
                                    Satıcı
                                    <address>
                                        <strong>Admin, Inc.</strong><br>
                                        795 Folsom Ave, Suite 600<br>
                                        San Francisco, CA 94107<br>
                                        Telefon: (804) 123-5432<br>
                                        Email: info@almasaeedstudio.com
                                    </address>
                                </div>
                                <!-- /.col -->
                                <div class="col-sm-4 invoice-col">
                                    Alıcı
                                    <address>
                                        <strong>@ViewBag.userName</strong><br>
                                        @ViewBag.userCity<br>                                        
                                        Telefon: @ViewBag.userPhone<br>
                                        Email: @ViewBag.userEmail
                                    </address>
                                </div>
                                <!-- /.col -->
                                <div class="col-sm-4 invoice-col">
                                    <b>Fatura #007612</b><br>
                                    <br>
                                    <b>Sipariş No:</b> 4F3S8J<br>
                                    <b>Sipariş Tarihi:</b> 2/22/2014<br>
                                    <b>Hesap:</b> 968-34567
                                </div>
                                <!-- /.col -->
                            </div>
                            <!-- /.row -->
                            <!-- Table row -->
                            <div class="row">
                                <div class="col-12 table-responsive">
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>Resim</th>
                                                <th>Adet</th>
                                                <th>Ürün</th>
                                                <th>Fiyat</th>
                                                <th>Toplam Fiyat</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model.CartItems)
                                            {
                                            <tr>
                                                <td>
                                                    <img src="~/img/@item.ImageUrl" width="50" alt="" />
                                                </td>
                                                <td>@item.Quantity</td>
                                                <td>@item.Name</td>
                                                <td>@item.Price ₺</td>
                                                <td>@(item.Quantity * item.Price) ₺</td>
                                            </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                                <!-- /.col -->
                            </div>
                            <!-- /.row -->

                            <div class="row">
                                <!-- accepted payments column -->
                                <div class="col-6">
                                    <p class="lead">Ödeme Yöntemleri:</p>
                                    <img src="~/custom2css/dist/img/credit/visa.png" alt="Visa">
                                    <img src="~/custom2css/dist/img/credit/mastercard.png" alt="Mastercard">
                                    <img src="~/custom2css/dist/img/credit/american-express.png" alt="American Express">
                                    <img src="~/custom2css/dist/img/credit/paypal2.png" alt="Paypal">

                                    <p class="text-muted well well-sm shadow-none" style="margin-top: 10px;">
                                        Etsy doostang zoodles disqus groupon greplin oooj voxy zoodles, weebly ning heekya handango imeem
                                        plugg
                                        dopplr jibjab, movity jajah plickers sifteo edmodo ifttt zimbra.
                                    </p>
                                </div>
                                <!-- /.col -->
                                <div class="col-6">
                                    <p class="lead">Fatura Tarihi 2/22/2014</p>

                                    <div class="table-responsive">
                                        <table class="table">
                                            <tr>
                                                <th style="width:50%">Alt Toplam:</th>
                                                <td>₺ @Model.TotalPrice().ToString("c")</td>
                                            </tr>
                                            <tr>
                                                <th>Kdv (8%)</th>
                                                <td>₺10.34</td>
                                            </tr>
                                            <tr>
                                                <th>Kargo:</th>
                                                <td>₺5.80</td>
                                            </tr>
                                            <tr>
                                                <th>Toplam:</th>
                                                <td>₺ @Model.TotalPrice().ToString("c")</td>
                                            </tr>
                                        </table>
                                    </div>
                                </div>
                                <!-- /.col -->
                            </div>
                            <!-- /.row -->
                            <!-- this row will not appear when printing -->
                            <div class="row no-print">
                                <div class="col-12">
                                    <a href="/billprint" target="_blank" class="btn btn-default"><i class="fas fa-print"></i> Yazdır</a>
                                    <a href="/checkout" class="btn btn-success float-right">
                                        <i class="far fa-credit-card"></i> Öde

                                    </a>
                                        <button type="button" class="btn btn-primary float-right" style="margin-right: 5px;">
                                            <i class="fas fa-download"></i> PDF İndir
                                        </button>
</div>
                            </div>
                        </div>
                        <!-- /.invoice -->
                    </div><!-- /.col -->
                </div><!-- /.row -->
            </div><!-- /.container-fluid -->
        </section>
        <!-- /.content -->
        <!-- ./wrapper -->
        <!-- jQuery -->
        <script src="~/custom2css/plugins/jquery/jquery.min.js"></script>
        <!-- Bootstrap 4 -->
        <script src="~/custom2css/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
        <!-- AdminLTE App -->
        <script src="~/custom2css/dist/js/adminlte.min.js"></script>
        <!-- AdminLTE for demo purposes -->
        <script src="~/custom2css/dist/js/demo.js"></script>
    </body>
</html>
}




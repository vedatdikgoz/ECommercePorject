@model List<User>


@{
    ViewData["Title"] = "Admin Page";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<table class="table table-bordered table-striped">
    <tr>
        <td>UserName</td>
        <td>FirstName</td>
        <td>LastName</td>
        <td>Email</td>
        <td>Roller</td>
        <td>Rol Seç</td>
        <td>Şifre İşlem</td>
    </tr>
    @if (Model.Count == 0)
    {
        <tr>
            <td colspan="3">Hiç bir üye yoktur.</td>
        </tr>
    }
    else
    {
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td user-roles="@user.Id"></td>
                <td style="width: 100px"><a class="btn btn-outline-info btn-sm" asp-action="RoleAssign" asp-route-id="@user.Id">Rol Ata</a></td>
                <td style="width: 120px"><a class="btn btn-outline-success btn-sm" asp-controller="Admin" asp-action="ResetUserPassword" asp-route-id="@user.Id">Şifre Yenile</a></td>
            </tr>
        }
    }
</table>

